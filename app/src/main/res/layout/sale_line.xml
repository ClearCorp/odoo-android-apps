<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="16">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSaleQty"
            android:textSize="@dimen/text_product_line_label_size"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:layout_weight="4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSaleProduct"
            android:textSize="@dimen/text_product_line_label_size"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="12" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSaleUom"
            android:textSize="@dimen/text_product_line_label_size"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="4" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSalePrice"
            android:textSize="@dimen/text_product_line_label_size"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:layout_weight="4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSalePriceTotal"
            android:textSize="@dimen/text_product_line_label_size"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="8"/>

    </LinearLayout>

</LinearLayout>