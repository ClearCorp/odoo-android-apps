<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEditView"
        android:layout_gravity="left"
        android:layout_weight="3"
        android:text="@string/action_cash" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textViewSaleQtyEdit"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="3"
        android:inputType="numberDecimal"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textViewSaleProductEdit"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textViewSaleUomEdit"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textViewSalePriceEdit"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="3"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textViewSalePriceTotalEdit"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="3"/>

</LinearLayout>