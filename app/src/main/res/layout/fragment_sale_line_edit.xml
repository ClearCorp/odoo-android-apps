<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEditView"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="@string/prompt_edit_line" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSaleProductEdit"
            android:layout_gravity="start"
            android:textAlignment="center"
            android:hint="@string/prompt_product"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="6">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextSaleQtyEdit"
            android:layout_gravity="center_vertical|start"
            android:textAlignment="center"
            android:hint="@string/prompt_qty"
            android:layout_weight="1"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSaleUomEdit"
            android:layout_gravity="center_vertical|start"
            android:textAlignment="center"
            android:hint="@string/prompt_uom"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSalePriceEdit"
            android:layout_gravity="center_vertical|start"
            android:textAlignment="center"
            android:layout_weight="2"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSalePriceTotalEdit"
            android:layout_gravity="center_vertical|start"
            android:textAlignment="center"
            android:layout_weight="2"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_save"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_cancel"/>

    </LinearLayout>

</LinearLayout>